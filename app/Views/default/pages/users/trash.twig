{% extends "default/layout.twig" %}

{% block title %}Lixeira de Usuários - {{ app_name }}{% endblock %}

{% block styles %}
<link rel="stylesheet" href="{{ asset('assets/css/dashboard.css') }}?v=3">
<link rel="stylesheet" href="{{ asset('assets/css/users.css') }}">
{% endblock %}

{% block content %}
<!-- Topbar -->
<div class="topbar">
    <div class="topbar-left">
        <i class="bi bi-list menu-toggle" onclick="toggleSidebar()"></i>
        <div class="topbar-logo">
            <img src="{{ asset('assets/img/logo.svg') }}" alt="{{ app_name }}">
        </div>
    </div>
    <div class="topbar-right">
        <div class="topbar-icon">
            <i class="bi bi-bell"></i>
            <span class="badge"></span>
        </div>
        <div class="user-menu">
            <div class="user-info" onclick="toggleDropdown()">
                <div class="user-avatar">{{ user.name|slice(0, 1)|upper }}</div>
                <div class="user-details">
                    <div class="user-name">{{ user.name }}</div>
                    <div class="user-role">Administrador</div>
                </div>
                <i class="bi bi-chevron-down"></i>
            </div>
            <div class="dropdown-menu" id="userDropdown">
                <a class="dropdown-item" href="{{ url('profile') }}">
                    <i class="bi bi-person"></i> Meu Perfil
                </a>
                <a class="dropdown-item" href="{{ url('settings') }}">
                    <i class="bi bi-gear"></i> Configurações
                </a>
                <div class="dropdown-divider"></div>
                <a class="dropdown-item" href="{{ url('logout') }}">
                    <i class="bi bi-box-arrow-right"></i> Sair
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Sidebar -->
<aside class="sidebar" id="sidebar">
    <nav class="sidebar-nav">
        <div class="nav-section">
            <div class="nav-section-title">Menu Principal</div>
            <a class="nav-link" href="{{ url('dashboard') }}">
                <i class="bi bi-speedometer2"></i> Dashboard
            </a>
        </div>
        <div class="nav-section">
            <div class="nav-section-title">Sistema</div>
            <a class="nav-link nav-dropdown active" href="javascript:void(0)" onclick="toggleSubmenu(this)">
                <i class="bi bi-gear"></i> Configurações
                <i class="bi bi-chevron-down nav-arrow" style="transform: rotate(180deg);"></i>
            </a>
            <div class="nav-submenu show">
                <a class="nav-link nav-sublink active" href="{{ url('users') }}">
                    <i class="bi bi-people"></i> Usuários
                </a>
                <a class="nav-link nav-sublink" href="{{ url('settings') }}">
                    <i class="bi bi-sliders"></i> Geral
                </a>
            </div>
        </div>
    </nav>
</aside>

<!-- Main Content -->
<main class="main-content">
    <div class="page-header">
        <div>
            <h1>Lixeira de Usuários</h1>
            <p class="page-subtitle">Usuários deletados</p>
        </div>
        <a href="{{ url('users') }}" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Voltar
        </a>
    </div>

    {% if error %}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle"></i> {{ error }}
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
    {% endif %}

    {% if success %}
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle"></i> {{ success }}
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
    {% endif %}

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nome</th>
                            <th>Email</th>
                            <th>Username</th>
                            <th>Status</th>
                            <th>Nível</th>
                            <th>Deletado em</th>
                            <th class="text-end">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% if users|length > 0 %}
                            {% for user_item in users %}
                            <tr>
                                <td>{{ user_item.id }}</td>
                                <td>{{ user_item.name }}</td>
                                <td>{{ user_item.email }}</td>
                                <td>{{ user_item.username }}</td>
                                <td>
                                    <span class="badge badge-secondary">
                                        {{ user_item.status_name }}
                                    </span>
                                </td>
                                <td>{{ user_item.level_name }}</td>
                                <td>{{ user_item.deleted_at|date('d/m/Y H:i') }}</td>
                                <td class="text-end">
                                    <form method="POST" action="{{ url('users/' ~ user_item.id ~ '/restore') }}" style="display: inline;">
                                        <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                                        <button type="submit" class="btn btn-sm btn-success" title="Restaurar">
                                            <i class="bi bi-arrow-counterclockwise"></i>
                                        </button>
                                    </form>
                                    {% if user_item.id != 1 %}
                                    <form method="POST" action="{{ url('users/' ~ user_item.id ~ '/force-delete') }}" style="display: inline;" onsubmit="return confirm('Tem certeza? Esta ação é PERMANENTE e não pode ser desfeita!');">
                                        <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                                        <button type="submit" class="btn btn-sm btn-danger" title="Deletar permanentemente">
                                            <i class="bi bi-x-circle"></i>
                                        </button>
                                    </form>
                                    {% else %}
                                    <button class="btn btn-sm btn-secondary" title="Usuário protegido" disabled>
                                        <i class="bi bi-shield-lock"></i>
                                    </button>
                                    {% endif %}
                                </td>
                            </tr>
                            {% endfor %}
                        {% else %}
                            <tr>
                                <td colspan="8" class="text-center">Nenhum usuário na lixeira</td>
                            </tr>
                        {% endif %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</main>

<script>
function toggleDropdown() {
    document.getElementById('userDropdown').classList.toggle('show');
}

function toggleSidebar() {
    document.getElementById('sidebar').classList.toggle('show');
}

function toggleSubmenu(element) {
    const submenu = element.nextElementSibling;
    const arrow = element.querySelector('.nav-arrow');
    submenu.classList.toggle('show');
    arrow.style.transform = submenu.classList.contains('show') ? 'rotate(180deg)' : 'rotate(0deg)';
}

window.onclick = function(event) {
    if (!event.target.closest('.user-menu')) {
        var dropdown = document.getElementById('userDropdown');
        if (dropdown && dropdown.classList.contains('show')) {
            dropdown.classList.remove('show');
        }
    }
}
</script>
{% endblock %}
