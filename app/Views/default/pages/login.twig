{% extends "default/layout.twig" %}

{% block title %}Login - {{ app_name }}{% endblock %}

{% block styles %}
<link rel="stylesheet" href="{{ asset('assets/css/auth.css') }}">
<style>
.form-control.is-invalid {
    border-color: #dc3545;
}
.invalid-feedback {
    display: none;
    color: #dc3545;
    font-size: 0.875rem;
    margin-top: 0.25rem;
}
.form-control.is-invalid ~ .invalid-feedback {
    display: block;
}
</style>
{% endblock %}

{% block content %}
<div class="container">
    <div class="auth-card">
        <div class="logo-container">
            <img src="{{ asset('assets/img/logo.svg') }}" alt="{{ app_name }}">
        </div>
        
        {% if error %}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> {{ error }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
        {% endif %}
        
        {% if success %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> {{ success }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
        {% endif %}
        
        <form method="POST" action="{{ url('login') }}" id="loginForm" novalidate>
            <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
            
            <div class="input-group-custom">
                <i class="bi bi-person-fill icon"></i>
                <input type="text" class="form-control" id="username" name="username" placeholder="Digite seu usuário" required autofocus>
                <div class="invalid-feedback">Por favor, informe seu usuário</div>
            </div>
            
            <div class="input-group-custom">
                <i class="bi bi-lock-fill icon"></i>
                <input type="password" class="form-control" id="password" name="password" placeholder="Digite sua senha" required>
                <div class="invalid-feedback">Por favor, informe sua senha</div>
            </div>
            
            <div class="text-end mb-3">
                <a href="{{ url('forgot-password') }}" class="forgot-link">Esqueceu a senha?</a>
            </div>
            
            <button type="submit" class="btn btn-primary btn-auth w-100">
                <i class="bi bi-box-arrow-in-right"></i> Entrar
            </button>
        </form>
    </div>
    
    <div class="footer-text">
        © {{ "now"|date("Y") }} {{ app_name }} - Todos os direitos reservados.
    </div>
</div>
{% endblock %}

{% block scripts %}
<script>
document.getElementById('loginForm').addEventListener('submit', function(e) {
    // Remove validações anteriores
    document.querySelectorAll('.is-invalid').forEach(el => el.classList.remove('is-invalid'));
    
    let isValid = true;
    
    // Valida username
    const username = document.getElementById('username');
    if (!username.value.trim()) {
        username.classList.add('is-invalid');
        isValid = false;
    }
    
    // Valida password
    const password = document.getElementById('password');
    if (!password.value.trim()) {
        password.classList.add('is-invalid');
        isValid = false;
    }
    
    // Se não for válido, previne o envio
    if (!isValid) {
        e.preventDefault();
        return false;
    }
});

// Remove erro ao digitar
document.querySelectorAll('#loginForm input').forEach(input => {
    input.addEventListener('input', function() {
        if (this.classList.contains('is-invalid')) {
            this.classList.remove('is-invalid');
        }
    });
});
</script>
{% endblock %}
