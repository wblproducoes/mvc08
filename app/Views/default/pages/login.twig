{% extends "default/layout.twig" %}

{% block title %}Login - {{ app_name }}{% endblock %}

{% block styles %}
<link rel="stylesheet" href="{{ asset('assets/css/auth.css') }}">
{% endblock %}

{% block content %}
<div class="container">
    <div class="auth-card">
        <div class="logo-container">
            <img src="{{ asset('assets/img/logo.svg') }}" alt="{{ app_name }}">
        </div>
        
        <div id="alert-container"></div>
        
        <form id="loginForm" novalidate>
            <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
            
            <div class="input-group-custom">
                <i class="bi bi-person-fill icon"></i>
                <input type="text" class="form-control" id="username" name="username" placeholder="Digite seu usuário" required autofocus>
            </div>
            
            <div class="input-group-custom">
                <i class="bi bi-lock-fill icon"></i>
                <input type="password" class="form-control" id="password" name="password" placeholder="Digite sua senha" required>
            </div>
            
            <div class="text-end mb-3">
                <a href="{{ url('forgot-password') }}" class="forgot-link">Esqueceu a senha?</a>
            </div>
            
            <button type="submit" class="btn btn-primary btn-auth w-100">
                <i class="bi bi-box-arrow-in-right"></i> Entrar
            </button>
        </form>
    </div>
    
    <div class="footer-text">
        © {{ "now"|date("Y") }} {{ app_name }} - Todos os direitos reservados.
    </div>
</div>
{% endblock %}

{% block scripts %}
<script>
document.getElementById('loginForm').addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const formData = new FormData(e.target);
    const alertContainer = document.getElementById('alert-container');
    const submitBtn = e.target.querySelector('button[type="submit"]');
    
    submitBtn.disabled = true;
    submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Entrando...';
    
    try {
        const response = await fetch('{{ url("login") }}', {
            method: 'POST',
            body: formData
        });
        
        const data = await response.json();
        
        if (data.success) {
            alertContainer.innerHTML = `
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle"></i> Login realizado com sucesso!
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            `;
            setTimeout(() => {
                window.location.href = data.redirect;
            }, 500);
        } else {
            alertContainer.innerHTML = `
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle"></i> ${data.message}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            `;
            submitBtn.disabled = false;
            submitBtn.innerHTML = '<i class="bi bi-box-arrow-in-right"></i> Entrar';
        }
    } catch (error) {
        alertContainer.innerHTML = `
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-triangle"></i> Erro ao processar login
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        `;
        submitBtn.disabled = false;
        submitBtn.innerHTML = '<i class="bi bi-box-arrow-in-right"></i> Entrar';
    }
});
</script>
{% endblock %}
